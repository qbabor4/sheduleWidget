<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_time_to_holiday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="Czas do Wakacji" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- tu zegar -->


        <TextView
            android:id="@+id/tv_timeleft_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="ZostaÅ‚y jeszcze"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_days_to_holiday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="10dp"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/tv_days_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:textSize="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_hours_to_holiday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="10dp"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/tv_hours_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GODZINY"
                android:textSize="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_minutes_to_holiday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="10dp"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/tv_minutes_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINUTY"
                android:textSize="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_seconds_to_holiday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="10dp"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/tv_seconds_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEKUNDY"
                android:textSize="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_to_holiday_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do wakacji"
                android:paddingRight="10dp"
                android:textSize="40dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>