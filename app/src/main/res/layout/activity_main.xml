<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="@string/app_name" />

        <Button
            android:id="@+id/btn_show_DB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_update_DB"
            android:layout_alignBottom="@+id/btn_update_DB"
            android:layout_alignLeft="@+id/etAlarm"
            android:layout_alignStart="@+id/etAlarm"
            android:text="Pokaż" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="ID"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_delete_DB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_update_DB"
            android:layout_toEndOf="@+id/btn_update_DB"
            android:layout_toRightOf="@+id/btn_update_DB"
            android:text="Delete" />

        <Button
            android:id="@+id/btn_add_to_DB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_show_DB"
            android:layout_alignBottom="@+id/btn_show_DB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Dodaj" />

        <Button
            android:id="@+id/btn_update_DB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnAlarm"
            android:layout_marginBottom="35dp"
            android:layout_toEndOf="@+id/btn_show_DB"
            android:layout_toRightOf="@+id/btn_show_DB"
            android:text="Update" />

        <EditText
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/day_of_week"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Czas zakończenia"
            android:inputType="time" />

        <EditText
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/end_time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Czas rozpoczecia"
            android:inputType="time" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_id"
            android:layout_centerHorizontal="true"
            android:text="TextView" />

        <EditText
            android:id="@+id/day_of_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/subject"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Dzien tygodnia"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/teacher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Sala"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Nauczyciel"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_add_to_DB"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Opis"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/classroom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Przedmiot"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_update"
            android:layout_centerHorizontal="true"
            android:text="Set Alarm" />

        <EditText
            android:id="@+id/etAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnAlarm"
            android:layout_toEndOf="@+id/btn_add_to_DB"
            android:layout_toRightOf="@+id/btn_add_to_DB"
            android:ems="10"
            android:hint="Type time in seconds"
            android:inputType="textPersonName" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        >
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>