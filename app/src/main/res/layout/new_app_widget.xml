<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="@dimen/widget_margin">


    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="start" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/tv_start_time"
        android:layout_toRightOf="@+id/tv_start_time"
        android:text="koniec" />

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_classroom"
        android:layout_alignStart="@+id/tv_classroom"
        android:layout_below="@+id/tv_start_time"
        android:text="nazwa przedmiotu" />

    <TextView
        android:id="@+id/tv_classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_end_time"
        android:layout_alignRight="@+id/tv_end_time"
        android:layout_below="@+id/tv_subject"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="klasa" />
</RelativeLayout>

